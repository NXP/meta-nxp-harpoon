From b58a1df1907c7fe55bcd26939c818c789e6bc58a Mon Sep 17 00:00:00 2001
From: Hou Zhiqiang <Zhiqiang.Hou@nxp.com>
Date: Tue, 18 Oct 2022 10:37:17 +0800
Subject: [PATCH 11/14] arm64: dts: imx8m: add SGI mailbox dtsi file

Signed-off-by: Hou Zhiqiang <Zhiqiang.Hou@nxp.com>
---
 .../boot/dts/freescale/imx8m-sgi-mbox.dtsi    | 23 +++++++++++++++++++
 1 file changed, 23 insertions(+)
 create mode 100644 arch/arm64/boot/dts/freescale/imx8m-sgi-mbox.dtsi

diff --git a/arch/arm64/boot/dts/freescale/imx8m-sgi-mbox.dtsi b/arch/arm64/boot/dts/freescale/imx8m-sgi-mbox.dtsi
new file mode 100644
index 000000000000..674fc5399066
--- /dev/null
+++ b/arch/arm64/boot/dts/freescale/imx8m-sgi-mbox.dtsi
@@ -0,0 +1,23 @@
+// SPDX-License-Identifier: (GPL-2.0+ OR MIT)
+/*
+ * Copyright 2022 NXP
+ */
+
+/ {
+	reserved-memory {
+		#address-cells = <2>;
+		#size-cells = <2>;
+		ranges;
+
+		sgi_mbox_reserved: sgi-mbox@b8500000 {
+			reg = <0 0xb8500000 0 0x1000>;
+			no-map;
+		};
+	};
+
+	sgi_mailbox: sgi-mailbox@b8500000 {
+		compatible = "fsl,arm-sgi-mbox";
+		reg = <0 0xb8500000 0 0x1000>;
+		#mbox-cells = <2>;
+	};
+};
