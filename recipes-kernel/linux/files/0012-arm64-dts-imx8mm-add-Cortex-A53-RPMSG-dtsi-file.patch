From e28ed95a6677d835223a6ddc50541e10c5d9b425 Mon Sep 17 00:00:00 2001
From: Hou Zhiqiang <Zhiqiang.Hou@nxp.com>
Date: Tue, 18 Oct 2022 10:38:24 +0800
Subject: [PATCH 12/14] arm64: dts: imx8mm: add Cortex-A53 RPMSG dtsi file

Signed-off-by: Hou Zhiqiang <Zhiqiang.Hou@nxp.com>
---
 .../boot/dts/freescale/imx8mm-rpmsg-ca53.dtsi | 36 +++++++++++++++++++
 1 file changed, 36 insertions(+)
 create mode 100644 arch/arm64/boot/dts/freescale/imx8mm-rpmsg-ca53.dtsi

diff --git a/arch/arm64/boot/dts/freescale/imx8mm-rpmsg-ca53.dtsi b/arch/arm64/boot/dts/freescale/imx8mm-rpmsg-ca53.dtsi
new file mode 100644
index 000000000000..dda9445bf288
--- /dev/null
+++ b/arch/arm64/boot/dts/freescale/imx8mm-rpmsg-ca53.dtsi
@@ -0,0 +1,36 @@
+// SPDX-License-Identifier: (GPL-2.0+ OR MIT)
+/*
+ * Copyright 2022 NXP
+ */
+
+#include "imx8m-sgi-mbox.dtsi"
+
+/ {
+	reserved-memory {
+		#address-cells = <2>;
+		#size-cells = <2>;
+		ranges;
+
+		rpmsg_ca53_reserved: rpmsg-ca53@b8600000 {
+			reg = <0 0xb8600000 0 0x10000>;
+			no-map;
+		};
+
+		vdevbuffer_ca53: vdevbuffer-ca53@b8700000 {
+			compatible = "shared-dma-pool";
+			reg = <0 0xb8700000 0 0x100000>;
+			no-map;
+		};
+	};
+
+	rpmsg-ca53 {
+		compatible = "fsl,imx8mq-rpmsg";
+		reg = <0x0 0xb8600000 0x0 0x10000>; /* 64K for one rpmsg instance */
+		memory-region = <&vdevbuffer_ca53>;
+		mbox-names = "tx", "rx", "rxdb";
+		mboxes = <&sgi_mailbox 0 0
+			  &sgi_mailbox 1 0
+			  &sgi_mailbox 2 0>;
+		vdev-nums = <1>;
+	};
+};
